<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DocCloud" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/oxford_blue_700</item>
        <item name="colorPrimaryVariant">@color/oxford_blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sunglow</item>
        <item name="colorOnSecondary">@color/oxford_blue_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="colorSurface">@color/catskill_white</item>-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="textInputStyle">@style/Widget.DocCloud.TextInputLayout.FilledBox</item>
    </style>

    <style name="Theme.DocCloud.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DocCloud.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DocCloud.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>